class Solution {
public:
    TreeNode* bstToGst(TreeNode* root) {
        int sum = 0;
        sum_node(root,sum);
        return root;
    }
    
    void sum_node(TreeNode* node, int& sum){
        if (node == NULL)  return;
        sum_node(node->right,sum);
        node->val += sum;
        sum = node->val;
        sum_node(node->left, sum);
    }
};//DO reverse inorder traversal u will get the answer
